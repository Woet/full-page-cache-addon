<?xml version="1.0"?>
<addon scheme="3.0">
    <id>full_page_cache</id>
    <version>0.0.8</version>
    <priority>10000</priority>
    <status>disabled</status>
    <default_language>en</default_language>

    <compatibility>
        <core_version>
            <min>4.3.6</min>
            <max>4.3.7</max>
        </core_version>
        <core_edition>ULTIMATE</core_edition>
    </compatibility>

    <settings edition_type="ROOT">
        <sections>
            <section id="general">
                <items>
                    <item id="radiogroup">
                        <type>radiogroup</type>
                        <name>Cache Solution</name>
                        <default_value></default_value>
                        <variants>
                            <item id="Varnish">
                                <name>Varnish</name>
                            </item>
                            <item id="Litespeed">
                                <name>Litespeed</name>
                            </item>
                        </variants>
                    </item>
                    <item id="varnish">
                        <type>header</type>
                    </item>
                    <item id="varnish_host">
                        <type>input</type>
                        <default_value>127.0.0.1</default_value>
                    </item>
                    <item id="varnish_adm_port">
                        <type>input</type>
                        <default_value>6082</default_value>
                    </item>
                    <item id="varnish_adm_secret">
                        <type>input</type>
                    </item>
                    <item id="common">
                        <type>header</type>
                    </item>
                    <item id="marketplace_license_number">
                        <type>input</type>
                    </item>
                    <item id="lscache">
                        <type>header</type>
                    </item>
                    <item id="lscache_to">
                        <type>input</type>
                        <default_value>90</default_value>
                    </item>
                </items>
            </section>
        </sections>
    </settings>

    <functions>
        <item for="install">fn_full_page_cache_install</item>
        <item for="uninstall">fn_full_page_cache_uninstall</item>
    </functions>

    <files>
        <file>esi.php</file>
        <file>var/conf/varnish</file>
    </files>
</addon>
